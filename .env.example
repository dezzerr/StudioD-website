# ============================================
# StudioD - Environment Configuration
# ============================================

# --------------------------------------------
# ImageKit Configuration (Required)
# --------------------------------------------
# Get your credentials from https://imagekit.io/dashboard
VITE_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/YOUR_ENDPOINT
VITE_IMAGEKIT_PUBLIC_KEY=YOUR_PUBLIC_KEY
IMAGEKIT_PRIVATE_KEY=YOUR_PRIVATE_KEY

# --------------------------------------------
# Netlify Configuration (Optional)
# --------------------------------------------
# These are auto-set by Netlify during deployment
NETLIFY_SITE_ID=your-site-id
NETLIFY_AUTH_TOKEN=your-auth-token

# --------------------------------------------
# Email/Notification Settings (Optional)
# --------------------------------------------
# For contact form notifications
CONTACT_EMAIL=hello@studiod.com
NOTIFICATION_EMAIL=admin@studiod.com

# Email service (choose one)
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# or Resend
RESEND_API_KEY=your-resend-api-key

# or Netlify Forms (default - no config needed)

# --------------------------------------------
# CMS Configuration
# --------------------------------------------
# Git Gateway backend for Decap CMS
GIT_GATEWAY_ENABLED=true

# --------------------------------------------
# Analytics (Optional)
# --------------------------------------------
# Google Analytics 4
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# or Plausible
VITE_PLAUSIBLE_DOMAIN=studiod.com

# --------------------------------------------
# Development Settings
# --------------------------------------------
# Set to 'true' to disable image optimization in dev
VITE_DISABLE_IMAGE_OPTIMIZATION=false
